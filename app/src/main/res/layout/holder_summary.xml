<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="20dp"
    android:paddingRight="20dp">

    <LinearLayout
        android:id="@+id/ll_tag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_review"
        android:orientation="horizontal"
        android:paddingTop="6dp"></LinearLayout>


    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_tag"
        android:layout_marginTop="12dp"
        android:textSize="14sp"
        tools:text="sample review" />

    <TextView
        android:id="@+id/tv_review_prefix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_review"
        android:layout_alignTop="@+id/tv_review"
        android:gravity="center"
        android:textColor="#111111"
        android:textSize="14dp"
        tools:text="most common review:ðŸ˜ƒ" />

    <TextView
        android:id="@+id/tv_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/tv_review_prefix"
        android:textColor="#111111"
        android:textSize="18dp"
        tools:text="LL" />


    <TextView
        android:id="@+id/tv_friend_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_summary"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="24dp"
        android:textColor="@color/colorPrimary"
        android:textSize="18sp"

        tools:text="Friends of Nick " />


</RelativeLayout>